#!/bin/bash
set -e

if [ "$VCS" = git ]; then
	rm -rf .git
	file=.gitignore
elif [ "$VCS" = hg ]; then
	rm -rf .hg
	file=.hgignore
elif [ "$VCS" = bzr ]; then
	rm -rf .bzr
	file=.bzrignore
elif [ "$VCS" = darcs ]; then
	rm -rf _darcs
	file=.darcsignore
fi

managed_by_etckeeper="managed by etckeeper"

if ! ggrep -q "$managed_by_etckeeper" "$file"; then
	echo "etckeeper: "$file" does not contain \"$managed_by_etckeeper\" comment; not removing"
else
	rm -f $file
fi
